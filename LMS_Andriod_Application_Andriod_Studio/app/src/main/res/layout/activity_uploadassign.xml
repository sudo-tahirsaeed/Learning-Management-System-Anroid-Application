<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2D3DA"
    android:contextClickable="false"
    tools:context=".uploadassign">

    <TextView
        android:id="@+id/tital"
        android:layout_width="197dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:background="#FBC02D"
        android:fontFamily="sans-serif-condensed-light"
        android:text="UPLOAD ASSIGNMENT"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/uploadlink"
        android:layout_width="363dp"
        android:layout_height="89dp"
        android:layout_marginTop="136dp"
        android:background="#B3E5FC"
        android:ems="10"
        android:hint="Assignment Link"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tital" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/upload"
        android:layout_width="121dp"
        android:layout_height="61dp"
        android:layout_marginTop="54dp"
        android:background="#66BB6A"
        android:text="UPLOAD"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadlink" />
</androidx.constraintlayout.widget.ConstraintLayout>