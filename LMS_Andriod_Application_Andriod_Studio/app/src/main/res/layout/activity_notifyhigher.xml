<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notifyhigher">

    <TextView
        android:id="@+id/tit"
        android:layout_width="259dp"
        android:layout_height="89dp"
        android:layout_marginTop="16dp"
        android:background="#AA0606"
        android:fontFamily="sans-serif-condensed-light"
        android:text="SEND NOTIFICATION"
        android:textAlignment="center"
        android:textColor="#FBC02D"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/regnoti"
        android:layout_width="250dp"
        android:layout_height="49dp"
        android:layout_marginTop="79dp"
        android:background="#F57C00"
        android:ems="10"
        android:hint="Enter Reg No"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tit" />

    <EditText
        android:id="@+id/issuenoti"
        android:layout_width="364dp"
        android:layout_height="194dp"
        android:layout_marginTop="76dp"
        android:background="#CCCCCC"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.617"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regnoti"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/endter"
        android:layout_width="169dp"
        android:layout_height="23dp"
        android:layout_marginTop="44dp"
        android:editable="false"
        android:text="Enter Issue below: "
        android:textColor="#050505"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regnoti" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sendnoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#E64A19"
        android:text="SEND"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/issuenoti" />
</androidx.constraintlayout.widget.ConstraintLayout>