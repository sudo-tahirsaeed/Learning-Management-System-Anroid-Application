<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b1"
    tools:context=".TeacherDashboard">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="83dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profileicon" />

    <TextView
        android:id="@+id/dtname"


        android:layout_width="230dp"


        android:layout_height="43dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/rounded_corner"

        android:fontFamily="sans-serif-black"
        android:textAlignment="center"
        android:textColor="#FCFFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/dtwelcome"


        android:layout_width="238dp"


        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="72dp"

        android:layout_marginBottom="139dp"
        android:fontFamily="sans-serif-black"
        android:text="Welcome"
        android:textAlignment="center"
        android:textColor="#1A237E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dtshowall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="422dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:text="____________________________________________________________________________"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dtname" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dtshowall"
        android:layout_width="148dp"
        android:layout_height="63dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="16dp"
        android:background="#C0CA33"
        android:rotation="-4"
        android:rotationX="28"
        android:rotationY="4"
        android:text="View Students Details"
        android:textColor="#004D40"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dteditattendence"
        android:layout_width="154dp"
        android:layout_height="69dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="28dp"
        android:background="#33691E"
        android:rotation="-4"
        android:rotationX="28"
        android:rotationY="4"
        android:text="Edit Atttendence"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dtshowall" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dteditgrades"
        android:layout_width="154dp"
        android:layout_height="69dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="16dp"
        android:background="#00B8D4"
        android:rotation="-4"
        android:rotationX="28"
        android:rotationY="4"
        android:text="Edit Grades"
        android:textColor="#020202"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dteditattendence" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dtsendnoti"
        android:layout_width="154dp"
        android:layout_height="69dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="32dp"
        android:background="#CA3D11"
        android:rotation="-4"
        android:rotationX="28"
        android:rotationY="4"
        android:text="Notify Higher Authorities"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dteditgrades" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dtassign"
        android:layout_width="154dp"
        android:layout_height="69dp"
        android:layout_marginTop="32dp"
        android:background="#303F9F"
        android:rotation="-4"
        android:rotationX="28"
        android:rotationY="4"
        android:text="UPLOAD ASSIGNMENT"
        android:textColor="#FBC02D"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dtsendnoti" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewmedissue"
        android:layout_width="154dp"
        android:layout_height="69dp"
        android:layout_marginTop="124dp"
        android:background="#C2185B"
        android:rotation="-4"
        android:rotationX="28"
        android:rotationY="4"
        android:text="View Medical Issues"
        android:textColor="#FBC02D"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dtsendnoti" />

</androidx.constraintlayout.widget.ConstraintLayout>