<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    android:backgroundTint="#15D3D3"
    tools:context=".AttendanceActivity">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_above="@+id/layout1"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/background_border"
        android:backgroundTint="#081873"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/nameN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Syed Huzaifa Bukhari"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/regnoN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="SP20-BSE-089"
            android:textColor="@color/purple_500"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/layout"
        android:layout_alignStart="@+id/layout"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/tbg2"
        android:gravity="center"
        android:text="Notifications"
        android:textColor="#090C1E"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notiftext"
        android:layout_width="wrap_content"
        android:layout_height="249dp"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginBottom="-260dp"
        android:background="#FFECB3"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="24sp" />

</RelativeLayout>